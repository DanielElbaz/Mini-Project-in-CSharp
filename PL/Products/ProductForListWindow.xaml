<Window x:Class="PL.Products.ProductForListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Products"
        mc:Ignorable="d"
        Title="ProductForListWindow" Height="650" Width="800">
    <Grid Name="MainGrid" >
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="321*"/>
            <ColumnDefinition Width="479*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Category" FontSize="40"  />
        <ComboBox Name="categoryList" HorizontalAlignment= "Stretch" FontSize="20"  VerticalAlignment ="Stretch" Margin="10" 
                      Grid.Column="1" SelectionChanged="categoryList_SelectionChanged"/>
        <ListView x:Name="ProductListView" MouseDoubleClick="ProductListView_MouseDoubleClick"  Grid.Row="1" Grid.ColumnSpan="2"/>
        <Button Content="Add Product" x:Name="addProductBtn" Grid.Row="2" Grid.Column="1"
                HorizontalAlignment="Right" Margin="5" Padding="5" FontSize="20" Click="addProductBtn_Click"/>
    </Grid>

</Window>
