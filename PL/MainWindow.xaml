            <Button Content="Order Tracking" HorizontalAlignment="Left" Margin="676,100,0,0" VerticalAlignment="Top" Height="33" Width="71" Click="OrderTracking_Click" RenderTransformOrigin="-1.551,0.345" />
            <Button Content="Catalog - New Order" HorizontalAlignment="Left" Margin="78,100,0,0" VerticalAlignment="Top" Height="33" Width="171" Click="ShowCatalog_Click" RenderTransformOrigin="-1.551,0.345" />
